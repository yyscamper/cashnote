<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价格"
            android:id="@+id/textViewMoney"
            android:layout_weight="1.0" />

        <EditText
            android:id="@+id/editTextInputMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:ems="10"
            android:hint="输入价格"
            android:inputType="numberDecimal"
            android:textSize="28dp"
            android:textStyle="bold"
            android:minHeight="36dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="付款者"
            android:id="@+id/textViewPayer"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="选择付款人的名字"
            android:id="@+id/textViewSelectPayer"
            android:layout_weight="0.2"
            android:layout_gravity="left"
            android:gravity="right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="与席者"
            android:id="@+id/textViewAttends"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="选择一起就餐的伙伴们"
            android:id="@+id/textViewSelectAttends"
            android:layout_weight="0.2"
            android:layout_gravity="left"
            android:gravity="left" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
    />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间"
            android:id="@+id/textViewTime"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="选择您的就餐时间"
            android:id="@+id/textViewSelectTime"
            android:layout_weight="0.2"
            android:layout_gravity="left"
            android:gravity="right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地点"
            android:id="@+id/textViewLocation"
            android:layout_weight="1.0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="选择您的就餐地点"
            android:id="@+id/textViewSelectLocation"
            android:layout_weight="0.2"
            android:layout_gravity="left"
            android:gravity="right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <EditText
        android:id="@+id/editTextPayDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:layout_weight="1.0"
        android:minLines="2"
        android:hint="添加备注"
        />

    <Button
        android:id="@+id/btnSavePayEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_vertical|center_horizontal"
        android:text="     Save     ">
    </Button>
</LinearLayout>
