<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_row_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:id="@+id/textView"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Felix Yuan"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_weight="0.25"
            android:layout_gravity="center_vertical"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:minHeight="@dimen/min_row_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话"
            android:id="@+id/textView2"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPhone"
            android:layout_weight="0.25"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="18912349876" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_row_height"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电子邮件"
            android:id="@+id/textView3"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmail"
            android:layout_weight="0.25"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="yyscamper@163.com" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_row_height"
        android:id="@+id/linearLayout3" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:id="@+id/textView4"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextBalance"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:layout_weight="0.25" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_row_height"
        android:id="@+id/linearLayout4" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="付款次数"
            android:id="@+id/textView5"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical"
            android:singleLine="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextPayCount"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:layout_weight="0.25"
            android:editable="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_row_height"
        android:id="@+id/linearLayout5" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出席次数"
            android:id="@+id/textView6"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical"
            android:singleLine="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextAttendCount"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:layout_weight="0.25" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonSave"
        android:layout_gravity="right" />
</LinearLayout>